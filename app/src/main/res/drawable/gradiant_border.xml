<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:angle="90"
                android:endColor="@color/colorGradientEnd"
                android:gradientRadius="90"
                android:startColor="@color/colorGradientStart"
                android:type="sweep" />

            <corners android:radius="@dimen/_8sdp"/>

            <stroke
                android:width="@dimen/_1sdp"
                android:color="@color/colorGradientStart" />
        </shape>
    </item>
    <item
        android:bottom="@dimen/_8sdp"
        android:left="@dimen/_8sdp"
        android:right="@dimen/_8sdp"
        android:top="@dimen/_8sdp">
        <shape android:shape="rectangle" >
            <solid android:color="#fff" />
        </shape>
    </item>

</layer-list>